<form action="/Telefone/GravarAlteracao" method="post">

    <p>
        <label for="id">ID:</label>
        <input id="id" readonly name="telefone.Id" value="@ViewBag.Telefone.Id" class="form-control" required />
    </p>

    <p>
        <label for="numero">Número:</label>
        <input type="text" id="numero" name="telefone.Numero" value="@ViewBag.Telefone.Numero" class="form-control" required />
    </p>

    <p>
        <label for="nome">Nome:</label>
        <select id="nome" name="telefone.NomeId" class="form-control" required>

            @foreach (var nome in ViewBag.Nomes)
            {
                <option value="@nome.Id" selected="@nome.Id.Equals(ViewBag.Telefone.NomeId)">@nome.NomeContato</option>
            }

        </select>
    </p>

    <input type="submit" value="Alterar" class="btn btn-outline-secondary" />
</form>