<form action="/Email/Adiciona" method="post">

    <p>
        <label for="email">E-mail:</label>
        <input id="email" type="email" name="email.EmailContato" class="form-control" placeholder="nome@exemplo.com" required/>
    </p>

    <p>
        <label for="nome">Nome:</label>
        <select id="nome" name="email.NomeId" class="form-control" required>

            @foreach (var nome in ViewBag.Nomes)
            {
                <option value="@nome.Id">@nome.NomeContato</option>
            }

        </select>
    </p>

    <input type="submit" value="Cadastrar" class="btn btn-outline-secondary" />
</form>